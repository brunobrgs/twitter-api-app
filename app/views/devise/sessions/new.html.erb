<% content_for :authentication do %>
  <%= form_for resource,
      as: resource_name,
      url: session_path(resource_name),
      html: { class: 'navbar-form navbar-right' } do |f| %>
    <div class="form-group">
      <%= f.text_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
    </div>

    <button type="submit" class="btn btn-success">Sign in</button>
    <%= link_to 'Sign up', new_registration_path(resource_name), class: 'btn btn-primary' %>
  <% end %>
<% end %>
